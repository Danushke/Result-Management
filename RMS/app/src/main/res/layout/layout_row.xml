<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your GPA"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">

            <TextView
                android:id="@+id/ICT1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="13dp"
                android:text="ICT1301"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewict1301"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/ICT1301"
                android:paddingLeft="25dp"
                android:text="Apple MacBook Air "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/ICT1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ICT1301"
                android:layout_marginTop="5dp"
                android:paddingRight="13dp"
                android:text="ICT1302"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewict1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewict1301"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ICT1302"
                android:paddingLeft="25dp"
                android:text="13.3 Inch, 256 GB"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/ICT1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ICT1302"
                android:layout_marginTop="5dp"
                android:paddingRight="13dp"
                android:text="ICT1303"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


            <TextView
                android:id="@+id/textViewict1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewict1302"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ICT1303"
                android:paddingLeft="25dp"
                android:paddingRight="5dp"
                android:text="4.7"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CMT1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ICT1303"
                android:layout_marginTop="5dp"
                android:text="CMT1301"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


            <TextView
                android:id="@+id/textViewcmt1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewict1303"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CMT1301"
                android:paddingLeft="25dp"
                android:text="INR 56990"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CMT1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CMT1301"
                android:layout_marginTop="5dp"
                android:text="CMT1302"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewcmt1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcmt1301"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CMT1301"
                android:paddingLeft="25dp"
                android:text="INR 569"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CMT1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CMT1302"
                android:layout_marginTop="5dp"
                android:text="CMT1303"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewcmt1005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcmt1303"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CMT1302"
                android:paddingLeft="25dp"
                android:text="INR 569"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CML1201"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CMT1303"
                android:layout_marginTop="5dp"
                android:text="CML1201"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewcml1201"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcmt1005"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CML1201"
                android:paddingLeft="25dp"
                android:text="INR 569"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>